@model WebApplicationParty.Models.PersonViewModel

@{
    ViewData["Title"] = "Person";
}

<h1>Person</h1>

<form asp-controller="Person" asp-action="Index" method="post">
    @Html.Hidden("PartyId", Model != null ? Model.PartyId : 0)
    <div class="form-group">
        <label>First name:
            <input type="text" class="form-control" asp-for="FirstName" />
        </label>
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label>
            Surname:
            <input type="text" class="form-control" asp-for="Surname" />
        </label>
        <span class="text-danger" asp-validation-for="Surname"></span>
    </div>
    <div class="form-group">
        <label>
            Date of birth:
            <input type="text" class="form-control" asp-for="DateOfBirth" />
        </label>
        <span class="text-danger" asp-validation-for="DateOfBirth"></span>
    </div>
    <div class="form-group">
        <label>
            Email address:
            <input type="text" class="form-control" asp-for="EmailAddress" />
        </label>
        <span class="text-danger" asp-validation-for="EmailAddress"></span>
    </div>
    <div class="button-group">
       <button type="submit" class="btn btn-default">Submit</button>
    </div>
</form>