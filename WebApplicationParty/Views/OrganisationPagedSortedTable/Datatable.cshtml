@{
    ViewData["Title"] = "Organisation list";
}

<h1>Paged and sorted Organisations as Datatable</h1>

<table id="datatable" class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Trading name</th>
            <th>Date Created</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<div>
    @Html.ActionLink("Home", "Index", "Home")
</div>

@section Scripts {
    <script type="text/javascript" src="~/lib/datatables/media/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/lib/datatables/media/js/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').DataTable({
                "searching": false,
                "processing": true,
                "serverSide": true,
                "ajax": "/OrganisationPagedSortedTable/DatatableJson",
                "columns": [
                    { "data": "name" },
                    { "data": "tradingName" },
                    { "data": "dateCreated" }
                ]
            });
        });
    </script>
}